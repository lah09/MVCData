@model MVCData.Models.People

      @*Ajax Form/BeginForm - use to stay in the same page or without directing to any other forms..."ajaxCreate" - existing div for update..........."OnSuccess - to update the existing index*@
@using (Ajax.BeginForm("AjaxCreate", "People", new AjaxOptions { HttpMethod="POST", UpdateTargetId= "ajaxCreate", InsertionMode=InsertionMode.Replace, OnSuccess = "updateIndex()" }))
{                      //ActionName,  Controller
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal"><br /><br />
        <h5 style="color:blue">Add new person</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
